@using Westwind.Globalization
@using PagedList
@using PagedList.Mvc

@model List<ViewModels.PostListViewModel>
@{
    ViewBag.Title = "آرشیو اخبار"; 
}


<div id="main" class="content-main">
    <section class="pagecontent ">
        <div class="container">
            <div class="big-title text-center mt40">
                <h2 class="tt02">آرشیو اخبار</h2>
            </div>
            <div class="row">
                <div class="col-md-12">



                    @if (Model.Count > 0)
                    {

                        <div class="newslist">
                            @foreach (var item in Model)
                            {
                                @Html.Partial("_NewsBox", @item)
                            }
                        </div>
                        <div class="clearfix clear"></div>
                        <div class="text-center m-b-10">
                            <div class="info-pagination">
                                @Html.PagedListPager((IPagedList)ViewBag.posts, page => Url.Action("news", "post", new { page = page }),
                   new PagedListRenderOptions { LinkToPreviousPageFormat = DbRes.T("PreviousPageFormat", "Words"), LinkToNextPageFormat = DbRes.T("NextPageFormat", "Words"), UlElementClasses = new List<string> { "pagination pagination-lg" } })

                            </div>
                        </div>
                    }



                </div>
            </div>
            <br /><br />
        </div>
    </section>


</div>



