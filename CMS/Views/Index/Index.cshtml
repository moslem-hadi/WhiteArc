    filenames = System.IO.Directory.EnumerateFiles(Server.MapPath("~/media/uploads/bg2/" + DbRes.T("LangMeta", "AppInfo")))
              .Select(System.IO.Path.GetFileName);

    if (filenames.Any()) {
        bg2 = filenames.Skip(randomnum).Take(1).Single(); }



}

