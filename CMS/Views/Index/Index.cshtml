<section id="contact" class="section gray-bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-7">
                <div class="section-title text-center m-b-80px m-b-70px-md">
                    <h2>@DbRes.T("Home.ContactTitle", "txt")</h2>
                    <p>@DbRes.T("Home.ContactDesc", "txt")</p>
                </div>
            </div>
        </div>
        <div class="row m-b-30px contactinfo text-center">
            <div class="col-6 col-md-4 col-sm-12 contactdetail">
                <i class="icon ti-location-pin"></i>
                <div class="font-alt">@DbRes.T("Home.ContactAddressTitle", "txt")</div>
                <h6>
                    @DbRes.T("Home.ContactAddress", "txt")
                </h6>
            </div>

            <div class="col-6 col-md-4 col-sm-12 contactdetail">
                <i class="icon ti-email"></i>
                <div class="font-alt">@DbRes.T("Home.ContactEmailTitle", "txt")</div>
                <h6>@DbRes.T("Home.ContactEmail", "txt")</h6>
            </div>

            <div class="col-6 col-md-4 col-sm-12 contactdetail">
                <i class="icon ti-headphone-alt"></i>
                <div class="font-alt">@DbRes.T("Home.ContactPhoneTitle", "txt")</div>
                <h6 class="ltr">@Html.Raw(DbRes.T("Home.ContactPhone", "txt"))</h6>
            </div>




        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-lg-6">
                <!-- Contact Form -->
                <div class="contact-form white-bg m-b-30px-md">
                    <h2 class="font-alt">@DbRes.T("Home.ContactFormTitle", "txt")</h2>
                    <div id="alert">

                    </div>
                    <div class="loadercon" id="form">
                        @using (Ajax.BeginForm("ContactSubmit", "index",
                        new AjaxOptions
                        {
                            OnSuccess = "OnSuccess",
                            OnFailure = "OnFailure",
                            LoadingElementId = "progress"
                        }))
                        {
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <input name="FullName" required id="FullName" placeholder="@DbRes.T("Home.ContactFormName", "txt")" class="form-control" type="text">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <input name="Email" required id="Email" placeholder="@DbRes.T("Home.ContactFormEmail", "txt")" class="form-control" type="email">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <textarea name="Text" required id="Text" placeholder="@DbRes.T("Home.ContactFormText", "txt")" rows="3" class="form-control"></textarea>
                                    </div>
                                </div>
                                <div class="col-12 text-left">
                                    <button class="btn btn-theme"><i class="fa fa-envelope-o" aria-hidden="true"></i>@DbRes.T("Home.ContactFormButton", "txt")</button>
                                </div>
                            </div>
                        }

                        <div id="progress" class="progressmodal">
                            <div class="center">
                                <img src="~/content/images/loading-image.gif" />
                            </div>
                        </div>
                    </div>
                </div>
                <!-- / -->
            </div> <!-- col -->

            <div class="col-12 col-lg-6">
                <!-- Contact map -->
                <div class="contact-map">
                    <img src="/content/images/map.jpg" alt="map" />
                </div>
                <!-- / -->
            </div> <!-- col -->

        </div> <!-- row -->
    </div> <!-- Container -->
</section>


@section scripts{
    <script src="~/Content/js/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        function OnSuccess(response) {
            var message = response.Msg;
            if (response.Stat) {
                $("#form").remove();
                $("#alert").removeClass().addClass("alert alert-success")
                    .html("@Html.Raw(DbRes.T("Home.ContactSuccessMessage","txt"))" + message + "</span></h5>").show();
            }
            else {
                $("#alert").removeClass().addClass("alert alert-warning").html(message).show();
            }
        }
        function OnFailure(response) {
            $("#alert").removeClass().addClass("alert alert-warning").html("@DbRes.T("Home.ContactFailedMessage", "txt")").show();
        }

    </script>
}