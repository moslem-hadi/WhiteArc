@model List<ViewModels.ProductListUiViewModel>
@using Westwind.Globalization
@using PagedList
@using PagedList.Mvc
@if (Model.Count > 0)
{
    <div class="masonry">


        @foreach (var item in Model)
        {
            @Html.Partial("_ProductBox", @item)
        }
    </div>
    <div class="text-center m-b-10">
        <div class="info-pagination">
            @Html.PagedListPager((IPagedList)ViewBag.Products, page => Url.Action("index", "project", new { page = page }),
               new PagedListRenderOptions { LinkToPreviousPageFormat = DbRes.T("PreviousPageFormat", "LinkText"), LinkToNextPageFormat = DbRes.T("NextPageFormat", "LinkText"), UlElementClasses = new List<string> { "pagination pagination-lg" } })
        </div>
    </div>

}
else
{
    <p></p>
}
