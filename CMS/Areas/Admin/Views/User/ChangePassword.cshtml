
@{
    ViewBag.Title = "تغییر رمز ورود";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="pull-right m-t-15">

            <a href="@Url.Action("index","index")" class="btn btn-default waves-effect"><i class='fa fa-chevron-left'></i> داشبورد</a>

        </div>
        <h4 class="page-title">تغییر رمز ورود</h4>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("میز کار", "index", "index")
            </li> 
            <li class="active">
                تغییر رمز ورود
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">

            <form action="/admin/user/ChangePassword" method="post">


                @Html.Raw(Model)


                <div class="form-horizontal formhr">

                    <div class="form-group">
                        <label class="control-label col-md-2">پسورد قدیم</label>
                        <div class="col-md-5">
                            <input type="password" value="" placeholder="پسورد قدیم" id="oldpass" name="oldpass" class="form-control ltr" />
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2">پسورد جدید</label>
                        
                        <div class="col-md-5">
                            <input type="password" value="" placeholder="پسورد جدید" id="newpass" name="newpass"  class="form-control ltr"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">تکرار پسورد جدید</label>
                        
                        <div class="col-md-5">
                            <input type="password" value="" placeholder="تکرار پسورد جدید" id="newpassrepeat" name="newpassrepeat" class="form-control ltr" />
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-5">
                            <input type="submit" value="ذخیــره" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

 