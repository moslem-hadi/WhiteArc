@using ViewModels
@model LoginViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ورود به حساب کاربری</title>

    <link href="~/Areas/Admin/Content/css/login.css" rel="stylesheet" />
    <script src="~/Areas/Admin/Content/js/jquery-1.8.3.min.js"></script>
    <script>

        $(document).ready(function () {

            $('.message a').click(function () {
                $('form').animate({ height: "toggle", opacity: "toggle" }, "slow");
            });
        });
    </script>
    <script src="~/Areas/Admin/Content/js/jquery.validate.min.js"></script>
    <script src="~/Areas/Admin/Content/js/jquery.validate-vsdoc.js"></script>
    <script src="~/Areas/Admin/Content/js/modernizr-2.6.2.js"></script>
</head>
<body>

    <div class="login-page">
        <div class="form">
            <form class="register-form">
                <input type="text" placeholder="آدرس ایمیل" autocomplete="off" />
                <button>ارسال درخواست تغییر رمز</button>
                <p class="message"><a href="#">ورود</a></p>
            </form>

            @using (Html.BeginForm("Login", "index", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post,
                        new { @class = "login-form", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "warning", placeholder = "نام کاربری" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })


                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "رمز عبور" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                <button type="submit">
                    ورود به حساب
                </button>
                @*<p class="message"><a href="#">درخواست رمز ورود</a></p>*@
            }
        </div>
    </div>


</body>

</html>
