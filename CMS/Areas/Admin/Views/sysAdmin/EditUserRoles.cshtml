@model ViewModels.EditUserViewModel

@{
    ViewBag.Title = "ویرایش رول کاربر";
}

<div class="row">
    <div class="col-sm-12">

        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("میز کار", "index", "index")
            </li>
            <li>
                @Html.ActionLink("مدیریت سیستم", "index", "sysadmin")
            </li>
            <li>
                @Html.ActionLink("لیست رول ها", "roleslist", "sysadmin")
            </li>
            <li class="active">
                ویرایش رول کاربر
            </li>
        </ol>

        <div id="sticky-anchor"></div>
        <div class="tobesticky" id="sticky">

            <h4 class="page-title">ویرایش رول کاربر</h4>
        </div>

    </div>
</div>

<div class="card-box  ">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(m => m.UserName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("رول ها", new { @class = "control-label col-md-2" })
                <span class="col-md-10">
                    @foreach (var item in Model.RolesList)
                {
                        <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                        @Html.Label(item.Value, new { @class = "control-label" })
                    }
                </span>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="دخیــــــره" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
