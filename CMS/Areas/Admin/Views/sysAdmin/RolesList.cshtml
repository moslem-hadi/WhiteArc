@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "لیست رول ها";
}



<div class="row">
    <div class="col-sm-12">

        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("میز کار", "index", "index")
            </li>
            <li>
                @Html.ActionLink("مدیریت سیستم", "index", "sysadmin")
            </li>
            <li class="active">
                لیست رول ها
            </li>
        </ol>

        <div id="sticky-anchor"></div>
        <div class="tobesticky" id="sticky">
            <div class="pull-left mainbtns">
                <a href="/admin/sysadmin/rolecreate" class="btn btn-inverse waves-effect"><i class='fa fa-plus'></i> افزودن رول</a>
            </div>
            <h4 class="page-title">لیست رول ها</h4>
        </div>

    </div>
</div>
        
<div class="card-box  ">
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                <label>نام رول</label>
            </th>
            <th>
                <label>عملیات</label>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("ویرایش", "roleedit", new { id = item.Id }) |
                    @Html.ActionLink("اطلاعات", "roledetails", new { id = item.Id }) |
                    @Html.ActionLink("حذف", "roledelete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    </div>



<div class="card-box  ">
    <h4 class="page-title">ویرایش رول های کاربر</h4>
     
    <form method="post" action="/admin/sysadmin/getuserforedit">
        <div class="form-group">
            <label class="control-label col-md-2">نام کاربری</label>
            <div class="col-md-10">
                <input name="UserName" type="text" class="form-control inline ltr" style="width:140px" />
                <input value="بررسی" type="submit" class="btn btn-success" />
            </div>
        </div>
        <div class="clearfix"></div>
    </form>
</div>