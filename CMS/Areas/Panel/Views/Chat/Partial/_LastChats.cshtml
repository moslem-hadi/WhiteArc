@model List<ViewModels.ChatListViewModel>

@{
    Layout = null;
}







@if (Model.Count > 0)
{


                        <h4 class="text-dark m-b-30 header-title m-t-0">آخرین گفتگوها <i class="fa fa-refresh pointer pull-left small" id="refereschats"></i></h4>
                        <div class="clearfix"></div>


    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="text-center" width="20%">آخرین پیام</th>
                    <th width="50%">پروژه</th> 
                    <th class="text-center" width="10%">پیام ها</th>
                    
                </tr>
            </thead>
            <tbody>


                @foreach (var item in Model)
                {
                    <tr class="@(item.HasUnread ? "unread" : "")">
                        
                            <td class="text-center"><a class="block" href="/panel/chat/@item.ID">
    @item.LastPostDateEn
</a></td>
                        <td class="text-right"><a  class="block" href="/panel/chat/@item.ID">
    @item.Title
</a>
                    </td>
                        <td class="text-center">
                            <a class="block" href="/panel/chat/@item.ID"><label class="label label-success">@item.ChatCount پیام</label></a>
                        </td>


                    </tr>

                }

</tbody>
        </table>

    </div>


    <div class="text-left m-t-20">

        <a href="/panel/chat" class="btn btn-success">لیست گفتگوها</a>
    </div>


}
else
{
    <div class="text-center">


        <img src="~/Areas/Panel/Content/images/chat.png" alt="" width="150" />
        <h4 class="text-muted m-t-20">هنوز با کسی گفتگو نکرده اید.</h4>


    </div>
}
<script>
    $(function () {
        $("#refereschats").click(function () {
            getChats();
        });

    });
</script>